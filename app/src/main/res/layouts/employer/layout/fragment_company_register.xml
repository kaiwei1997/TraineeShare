<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="horizontal|vertical"
    tools:context=".RegisterActivity$PlaceholderFragment"
    tools:layout_editor_absoluteY="25dp">

    <ScrollView
        android:id="@+id/scrollView_company_register"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_company_logo"
                android:layout_width="136dp"
                android:layout_height="29dp"
                android:layout_marginEnd="138dp"
                android:layout_marginLeft="137dp"
                android:layout_marginRight="138dp"
                android:layout_marginStart="137dp"
                android:layout_marginTop="4dp"
                android:text="@string/company_logo"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_select_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="163dp"
                android:layout_marginLeft="160dp"
                android:layout_marginRight="163dp"
                android:layout_marginStart="160dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_normal"
                android:text="@string/upload"
                android:textColor="#fff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_company_logo" />

            <ImageView
                android:id="@+id/iv_company_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_marginEnd="136dp"
                android:layout_marginLeft="135dp"
                android:layout_marginRight="136dp"
                android:layout_marginStart="135dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/company_logo"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_company_logo"
                app:srcCompat="@drawable/ic_company"
                tools:src="@android:drawable/screen_background_dark_transparent" />

            <TextView
                android:id="@+id/tv_company_detail"
                android:layout_width="144dp"
                android:layout_height="29dp"
                android:layout_marginEnd="134dp"
                android:layout_marginLeft="133dp"
                android:layout_marginRight="134dp"
                android:layout_marginStart="133dp"
                android:layout_marginTop="20dp"
                android:text="@string/company_detail"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_select_img" />

            <EditText
                android:id="@+id/et_company_name"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:hint="@string/company_name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_company_detail" />

            <TextView
                android:id="@+id/tv_CompanyNameRequirement"
                android:layout_width="390dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="6dp"
                android:text="Please provide full company name as recorded in your local business registration documents."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_company_name" />

            <EditText
                android:id="@+id/et_company_email"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/company_email_login"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_CompanyNameRequirement" />

            <EditText
                android:id="@+id/et_company_address"
                android:layout_width="391dp"
                android:layout_height="104dp"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/company_address"
                android:inputType="textMultiLine|textPostalAddress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_company_email" />

            <EditText
                android:id="@+id/et_contact_person_fn"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="@string/contact_person_first_name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_company_address" />

            <EditText
                android:id="@+id/et_contact_person_ln"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/contact_person_last_name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_contact_person_fn" />

            <EditText
                android:id="@+id/et_company_contact"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/company_contact_number"
                android:inputType="phone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_contact_person_ln" />

            <EditText
                android:id="@+id/et_company_pass"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/login_password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_company_contact" />

            <EditText
                android:id="@+id/et_confirm_company_pass"
                android:layout_width="391dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:hint="@string/confirm_login_password"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_company_pass" />

            <Button
                android:id="@+id/btn_company_reg"
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="52dp"
                android:layout_marginLeft="73dp"
                android:layout_marginRight="52dp"
                android:layout_marginStart="73dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_normal"
                android:text="@string/register"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/btn_company_cencel_reg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_confirm_company_pass"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btn_company_cencel_reg"
                android:layout_width="104dp"
                android:layout_height="48dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="73dp"
                android:layout_marginLeft="52dp"
                android:layout_marginRight="73dp"
                android:layout_marginStart="52dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_normal"
                android:text="@string/cancel"
                android:textColor="#fff"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_company_reg"
                app:layout_constraintTop_toBottomOf="@+id/et_confirm_company_pass"
                app:layout_constraintVertical_bias="0.0" />


        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>