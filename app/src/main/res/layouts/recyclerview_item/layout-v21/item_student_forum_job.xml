<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:elevation="90dp"
    app:cardCornerRadius="12dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_jobCompanyLogo"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_search_job"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/tv_jobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:text="Title"
            android:textColor="#000"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/iv_jobCompanyLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_jobCompany"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:text="Company"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/iv_jobCompanyLogo"
            app:layout_constraintTop_toBottomOf="@+id/tv_jobTitle" />

        <TextView
            android:id="@+id/tv_jobWorkingArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:text="Working Area"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/iv_jobCompanyLogo"
            app:layout_constraintTop_toBottomOf="@+id/tv_jobCompany" />

        <TextView
            android:id="@+id/tv_jobPostDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="156dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="44dp"
            android:text="Post On"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@+id/tv_jobWorkingArea"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
